<VirtualHost *:80>
  DocumentRoot %TRAVIS_BUILD_DIR%/phabricator/phabricator/webroot

  <Directory "%TRAVIS_BUILD_DIR%/phabricator/phabricator/webroot">
    Options Indexes FollowSymLinks MultiViews ExecCGI
    AllowOverride None
    Require all granted
  </Directory>

  RewriteEngine on
  RewriteRule ^/rsrc/(.*)     -                       [L,QSA]
  RewriteRule ^/favicon.ico   -                       [L,QSA]
  RewriteRule ^(.*)$          /index.php?__path__=$1  [B,L,QSA]

  SetEnv PHABRICATOR_ENV production
</VirtualHost>
